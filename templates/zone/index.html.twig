{% extends 'layout/base_back.html.twig' %}

{% block title %}Back Office - Zones{% endblock %}

{% block page_title %}Gestion des zones de livraison{% endblock %}

{% block body %}
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="text-muted small">Total zones</div>
                    <div class="h3 mb-0">{{ kpi_total }}</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="text-muted small">Zones actives</div>
                    <div class="h3 mb-0">{{ kpi_active }}</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="text-muted small">Zones inactives</div>
                    <div class="h3 mb-0">{{ kpi_inactive }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-3">
                <div>
                    <h2 class="h5 mb-1">Zones de livraison</h2>
                    <p class="mb-0 text-muted small">
                        Organisation des zones géographiques couvertes par vos partenaires.
                    </p>
                </div>
                <a href="{{ path('app_zone_new') }}" class="btn btn-primary">
                    + Nouvelle zone
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Ville</th>
                        <th>Code postal</th>
                        <th>Description</th>
                        <th>Active</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for zone in zones %}
                        <tr>
                            <td class="text-muted">#{{ zone.id }}</td>
                            <td>{{ zone.nom }}</td>
                            <td>{{ zone.ville }}</td>
                            <td>{{ zone.codepostal }}</td>
                            <td class="text-truncate" style="max-width: 260px;">
                                {{ zone.description }}
                            </td>
                            <td>
                                {% if zone.actif %}
                                    <span class="badge bg-success-subtle text-success">Active</span>
                                {% else %}
                                    <span class="badge bg-secondary-subtle text-secondary">Inactive</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_zone_show', {'id': zone.id}) }}"
                                       class="btn btn-outline-secondary">
                                        Voir
                                    </a>
                                    <a href="{{ path('app_zone_edit', {'id': zone.id}) }}"
                                       class="btn btn-outline-primary">
                                        Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                Aucune zone configurée pour le moment.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

