{% extends 'layout/base_back.html.twig' %}

{% block title %}Modifier zone{% endblock %}

{% block page_title %}Modifier une zone{% endblock %}

{% block body %}
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
                <div>
                    <h2 class="h5 mb-1">Modifier la zone</h2>
                    <p class="mb-0 text-muted small">
                        Mets à jour les informations de couverture (ville, code postal, statut…).
                    </p>
                </div>
                <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_zone_index') }}">
                    Retour à la liste
                </a>
            </div>

            {{ include('zone/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <div class="mt-3">
                {{ include('zone/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
