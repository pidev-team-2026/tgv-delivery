{% extends 'layout/base_back.html.twig' %}

{% block title %}Gestion des contrats{% endblock %}

{% block breadcrumb %}Contrats{% endblock %}

{% block body %}
    <div class="page-title-section d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div>
            <h1 class="mb-1">Gestion des contrats</h1>
            <p class="subtitle mb-0">Vue d'ensemble des contrats partenaires</p>
        </div>
        <a href="{{ path('app_contrat_new') }}" class="btn btn-success mt-3 mt-md-0">
            <i class="bi bi-plus-lg me-1"></i> NOUVEAU CONTRAT
        </a>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-8">
            <div class="row g-3 mb-4">
                <div class="col-6 col-md-3">
                    <div class="card border-0 text-white stat-card-blue rounded-3">
                        <div class="card-body d-flex justify-content-between align-items-center py-3">
                            <div>
                                <div class="small opacity-90">Total</div>
                                <div class="h4 mb-0 fw-bold">{{ stats.total }}</div>
                            </div>
                            <i class="bi bi-file-earmark-text fs-2 opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 text-white stat-card-green rounded-3">
                        <div class="card-body d-flex justify-content-between align-items-center py-3">
                            <div>
                                <div class="small opacity-90">Actifs</div>
                                <div class="h4 mb-0 fw-bold">{{ stats.actifs }}</div>
                            </div>
                            <i class="bi bi-check-circle fs-2 opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 text-white stat-card-orange rounded-3">
                        <div class="card-body d-flex justify-content-between align-items-center py-3">
                            <div>
                                <div class="small opacity-90">Expirent bientôt</div>
                                <div class="h4 mb-0 fw-bold">{{ stats.expirant_bientot }}</div>
                            </div>
                            <i class="bi bi-clock fs-2 opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 text-white rounded-3" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
                        <div class="card-body d-flex justify-content-between align-items-center py-3">
                            <div>
                                <div class="small opacity-90">Expirés</div>
                                <div class="h4 mb-0 fw-bold">{{ stats.expires }}</div>
                            </div>
                            <i class="bi bi-exclamation-circle fs-2 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Liste des contrats</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Partenaire</th>
                                <th>Date début</th>
                                <th>Date fin</th>
                                <th>Statut</th>
                                <th class="text-end">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for contrat in contrats %}
                                <tr>
                                    <td class="text-muted">#{{ contrat.id }}</td>
                                    <td>{{ contrat.partenaire.nom }}</td>
                                    <td>{{ contrat.dateDebut|date('d/m/Y') }}</td>
                                    <td>{{ contrat.dateFin|date('d/m/Y') }}</td>
                                    <td>
                                        {% if contrat.isExpire %}
                                            <span class="badge bg-danger">Expiré</span>
                                        {% elseif contrat.isExpirantBientot %}
                                            <span class="badge bg-warning">Expire bientôt</span>
                                        {% else %}
                                            <span class="badge bg-success">Actif</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_contrat_show', {id: contrat.id}) }}" class="btn btn-outline-secondary">Voir</a>
                                            <a href="{{ path('app_contrat_edit', {id: contrat.id}) }}" class="btn btn-outline-primary">Modifier</a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center py-4 text-muted">Aucun contrat.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card">
                <div class="card-header">Statistiques</div>
                <div class="card-body">
                    <p class="small text-muted mb-3">Vue d'ensemble des contrats.</p>
                    <a href="{{ path('app_contrat_statistiques') }}" class="btn btn-outline-primary btn-sm">Voir les statistiques détaillées</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
