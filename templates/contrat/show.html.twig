{% extends 'layout/base_back.html.twig' %}

{% block title %}Contrat #{{ contrat.id }}{% endblock %}

{% block page_title %}Détail du contrat{% endblock %}

{% block body %}
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h5 mb-0">Contrat #{{ contrat.id }}</h2>
                        {% if contrat.isExpire %}
                            <span class="badge bg-danger">Expiré</span>
                        {% elseif contrat.isExpirantBientot %}
                            <span class="badge bg-warning">Expire bientôt</span>
                        {% else %}
                            <span class="badge bg-success">Actif</span>
                        {% endif %}
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Partenaire</dt>
                        <dd class="col-sm-8">
                            <a href="{{ path('app_partenaire_show', {id: contrat.partenaire.id}) }}">
                                {{ contrat.partenaire.nom }}
                            </a>
                        </dd>
                        <dt class="col-sm-4 text-muted">Date de début</dt>
                        <dd class="col-sm-8">{{ contrat.dateDebut|date('d/m/Y') }}</dd>
                        <dt class="col-sm-4 text-muted">Date de fin</dt>
                        <dd class="col-sm-8">{{ contrat.dateFin|date('d/m/Y') }}</dd>
                        <dt class="col-sm-4 text-muted">Notification envoyée</dt>
                        <dd class="col-sm-8">
                            {{ contrat.notificationEnvoyeeAt ? contrat.notificationEnvoyeeAt|date('d/m/Y H:i') : 'Non' }}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="h6 mb-3">Actions</h3>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_contrat_edit', {id: contrat.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('app_contrat_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
