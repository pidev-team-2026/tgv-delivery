{% extends 'admin/base.html.twig' %}

{% block title %}Liste des Rendez-Vous ‚Äî Back Office{% endblock %}

{% block breadcrumb %}
{% set breadcrumb = [
    { label: 'Tableau de bord', url: path('app_back_dashboard') },
    { label: 'Rendez-vous', url: '' }
] %}
{{ include('admin/Partials/breadcrumb.html.twig') }}
{% endblock %}

{% block body %}
<h1 class="admin-page-title">Liste des Rendez-Vous</h1>

<div class="card admin-card mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-md-row flex-wrap gap-3 align-items-md-center justify-content-between mb-3">
            <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary">Ajouter un Rendez-Vous</a>
            <form method="get" action="{{ path('app_rendez_vous_index') }}" class="d-flex flex-wrap gap-2">
                <input type="hidden" name="sort" value="{{ sort|default('dateRdv') }}">
                <input type="hidden" name="order" value="{{ order|default('desc') }}">
                <input type="text" name="q" class="form-control form-control-sm" style="min-width: 180px;" value="{{ search|default('') }}" placeholder="Message, √©tat ou commer√ßant‚Ä¶">
                <button type="submit" class="btn btn-primary btn-sm">Rechercher</button>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-striped admin-table table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><a href="{{ path('app_rendez_vous_index', { q: search|default(''), sort: 'id', order: (sort == 'id' and order == 'desc') ? 'asc' : 'desc' }) }}">Id</a></th>
                        <th><a href="{{ path('app_rendez_vous_index', { q: search|default(''), sort: 'commercant', order: (sort == 'commercant' and order == 'asc') ? 'desc' : 'asc' }) }}">Commer√ßant</a></th>
                        <th><a href="{{ path('app_rendez_vous_index', { q: search|default(''), sort: 'dateRdv', order: (sort == 'dateRdv' and order == 'desc') ? 'asc' : 'desc' }) }}">Date</a></th>
                        <th><a href="{{ path('app_rendez_vous_index', { q: search|default(''), sort: 'message', order: (sort == 'message' and order == 'asc') ? 'desc' : 'asc' }) }}">Message</a></th>
                        <th><a href="{{ path('app_rendez_vous_index', { q: search|default(''), sort: 'etat', order: (sort == 'etat' and order == 'asc') ? 'desc' : 'asc' }) }}">√âtat</a></th>
                        <th style="min-width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for rdv in rendez_vouses %}
                        <tr>
                            <td>{{ rdv.id }}</td>
                            <td>{{ rdv.commercant.nom }}</td>
                            <td>{{ rdv.dateRdv|date('d/m/Y H:i') }}</td>
                            <td>{{ rdv.message }}</td>
                            <td>
                                {% if rdv.etat == 'EN_ATTENTE' %}
                                    <span class="badge badge-etat-wait">En attente</span>
                                {% elseif rdv.etat == 'CONFIRME' %}
                                    <span class="badge badge-etat-confirm">Confirm√©</span>
                                {% elseif rdv.etat == 'ANNULE' %}
                                    <span class="badge badge-etat-cancel">Annul√©</span>
                                {% else %}
                                    <span class="badge badge-etat-wait">{{ rdv.etat }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group-actions">
                                    {% if rdv.etat == 'EN_ATTENTE' %}
                                        <form method="post" action="{{ path('app_rendez_vous_accepter', {'id': rdv.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('accepter' ~ rdv.id) }}">
                                            <button type="submit" class="btn btn-success btn-sm">Accepter</button>
                                        </form>
                                        <form method="post" action="{{ path('app_rendez_vous_refuser', {'id': rdv.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('refuser' ~ rdv.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Refuser</button>
                                        </form>
                                    {% endif %}
                                    <a href="{{ path('app_rendez_vous_show', {'id': rdv.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                    <a href="{{ path('app_rendez_vous_edit', {'id': rdv.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalDeleteRdv{{ rdv.id }}">Supprimer</button>
                                    <div class="modal fade" id="modalDeleteRdv{{ rdv.id }}" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered modal-sm">
                                            <div class="modal-content">
                                                <div class="modal-body small">Supprimer ce rendez-vous ?</div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Non</button>
                                                    <form method="post" action="{{ path('app_rendez_vous_delete', {'id': rdv.id}) }}" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
                                                        <button type="submit" class="btn btn-danger btn-sm">Oui</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6"><div class="empty-state"><span class="empty-state-icon d-block mb-2">üìÖ</span><p class="text-muted mb-3">Aucun rendez-vous trouv√©.</p><a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary btn-sm">Cr√©er un rendez-vous</a></div></td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
