{% extends 'front/base.html.twig' %}

{% block title %}Mes Rendez-vous - TGV Delivery{% endblock %}

{% block stylesheets %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f0fdf4 100%);
    color: #1e293b;
    min-height: 100vh;
}

/* Navbar styles from accueil_delivery */
.navbar-delivery {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.5);
    padding: 0.75rem 0;
}

.navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar-brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    color: #2563eb;
}

.navbar-logo {
    height: 40px;
    width: auto;
    margin-right: 0.75rem;
}

.navbar-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    align-items: center;
}

.navbar-links > li {
    position: relative;
}

.navbar-links a {
    color: #475569;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
}

.navbar-links a:hover {
    color: #2563eb;
}

.navbar-auth {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.btn-nav {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s ease;
}

.btn-nav-outline {
    background: transparent;
    color: #2563eb;
    border: 1px solid #2563eb;
}

.btn-nav-outline:hover {
    background: #2563eb;
    color: white;
}

.btn-nav-primary {
    background: #2563eb;
    color: white;
    border: 1px solid #2563eb;
}

.btn-nav-primary:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
}

/* Main content */
.main-content {
    margin-top: 100px;
    padding: 2rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
}

.page-header {
    text-align: center;
    margin-bottom: 3rem;
}

.page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 1rem;
}

.page-subtitle {
    font-size: 1.125rem;
    color: #64748b;
}

/* Rendez-vous cards */
.rendez-vous-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.rendez-vous-card {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.rendez-vous-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
}

.rendez-vous-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.rendez-vous-status {
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

.status-attente {
    background: #fef3c7;
    color: #92400e;
}

.status-confirme {
    background: #d1fae5;
    color: #065f46;
}

.status-annule {
    background: #fee2e2;
    color: #991b1b;
}

.rendez-vous-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.5rem;
}

.rendez-vous-commercant {
    color: #2563eb;
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.rendez-vous-date {
    color: #64748b;
    font-size: 0.875rem;
    margin-bottom: 1rem;
}

.rendez-vous-message {
    background: #f8fafc;
    padding: 1rem;
    border-radius: 0.5rem;
    border-left: 4px solid #2563eb;
    font-size: 0.875rem;
    color: #475569;
    line-height: 1.6;
}

/* Empty state */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.empty-state-icon {
    font-size: 4rem;
    color: #cbd5e1;
    margin-bottom: 1.5rem;
}

.empty-state-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #475569;
    margin-bottom: 0.5rem;
}

.empty-state-text {
    color: #94a3b8;
    margin-bottom: 2rem;
}

/* Actions */
.actions-section {
    text-align: center;
    margin-top: 2rem;
}

.btn-action {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    margin: 0 0.5rem;
}

.btn-primary {
    background: #2563eb;
    color: white;
}

.btn-primary:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
}

.btn-secondary {
    background: #64748b;
    color: white;
}

.btn-secondary:hover {
    background: #475569;
    transform: translateY(-1px);
}

/* Responsive */
@media (max-width: 768px) {
    .navbar-container {
        padding: 0 1rem;
    }
    
    .navbar-links {
        gap: 1rem;
        flex-direction: column;
        position: fixed;
        top: 70px;
        left: -100%;
        width: 100%;
        background: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: left 0.3s ease;
        padding: 1rem;
    }
    
    .navbar-links.active {
        left: 0;
    }
    
    .main-content {
        margin-top: 120px;
        padding: 1rem;
    }
    }
    
    .page-title {
        font-size: 2rem;
    }
    
    .rendezvous-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}

{% block body %}
<!-- Main Content -->
<div class="main-content">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Mes Rendez-vous</h1>
        <p class="page-subtitle">Suivez l'état de vos demandes de rendez-vous</p>
    </div>

    {% if rendezVous|length > 0 %}
        <!-- Rendez-vous Grid -->
        <div class="rendezvous-grid">
            {% for rdv in rendezVous %}
                <div class="rendezvous-card">
                    <div class="rendezvous-header">
                        <div class="rendezvous-icon 
                            {% if rdv.etat == 'CONFIRME' %}confirmed
                            {% elseif rdv.etat == 'ANNULE' %}cancelled
                            {% else %}pending{% endif %}">
                            {% if rdv.etat == 'CONFIRME' %}
                                <i class="fas fa-check-circle"></i>
                            {% elseif rdv.etat == 'ANNULE' %}
                                <i class="fas fa-times-circle"></i>
                            {% else %}
                                <i class="fas fa-clock"></i>
                            {% endif %}
                        </div>
                        <div class="rendezvous-info">
                            <h3>{{ rdv.commercant.nom }}</h3>
                            <div class="rendezvous-metier">{{ rdv.commercant.metier ?? 'Non spécifié' }}</div>
                        </div>
                    </div>
                    
                    <div class="rendezvous-details">
                        <div class="detail-item">
                            <i class="fas fa-calendar"></i>
                            <span>{{ rdv.dateRdv|date('d/m/Y H:i') }}</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-envelope"></i>
                            <span>{{ rdv.emailDemandeur }}</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>{{ rdv.commercant.ville ?? 'Non spécifié' }}</span>
                        </div>
                    </div>
                    
                    <div class="rendezvous-message">
                        <p>{{ rdv.message }}</p>
                    </div>
                    
                    <div class="rendezvous-status">
                        <span class="status-badge 
                            {% if rdv.etat == 'EN_ATTENTE' %}status-warning
                            {% elseif rdv.etat == 'CONFIRME' %}status-success
                            {% else %}status-danger{% endif %}">
                            {{ rdv.etat == 'EN_ATTENTE' ? 'En attente' : 
                               (rdv.etat == 'CONFIRME' ? 'Confirmé' : 'Annulé') }}
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-calendar-times"></i>
            </div>
            <h2 class="empty-state-title">Aucun rendez-vous trouvé</h2>
            <p class="empty-state-text">
                Vous n'avez pas encore demandé de rendez-vous. 
                Découvrez nos commerçants partenaires et prenez rendez-vous pour vos besoins.
            </p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="{{ path('app_front_commercants_list') }}" class="btn-action btn-primary">
                    <i class="fas fa-store"></i>
                    Voir les commerçants
                </a>
                <a href="{{ path('app_front_rendez_vous_demander') }}" class="btn-action btn-secondary">
                    <i class="fas fa-calendar-plus"></i>
                    Demander un RDV
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
