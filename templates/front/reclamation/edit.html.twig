{% extends 'basefront.html.twig' %}

{% block title %}Modifier la réclamation{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="mb-3">
                    <a href="{{ path('app_front_reclamation_show', {id: reclamation.id}) }}" class="btn btn-outline-secondary btn-sm">← Retour</a>
                </div>
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h2 class="mb-4">Modifier la réclamation</h2>

                        {{ form_start(form) }}
                            {{ form_row(form.subject) }}
                            {{ form_row(form.message) }}
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                                <a href="{{ path('app_front_reclamation_show', {id: reclamation.id}) }}" class="btn btn-outline-secondary">Annuler</a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
