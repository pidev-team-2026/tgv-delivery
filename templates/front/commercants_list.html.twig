{% extends 'front/base.html.twig' %}

{% block title %}Commerçants — Gestion des services{% endblock %}

{% block body %}
<h1 class="h4 fw-semibold mb-4">Liste des commerçants</h1>

<div class="d-flex flex-wrap gap-2 align-items-center mb-4">
    <a href="{{ path('app_front_rendez_vous_demander') }}" class="btn btn-primary">Demander un rendez-vous</a>
    <form method="get" action="{{ path('app_front_commercants_list') }}" class="d-flex flex-wrap gap-2 ms-md-auto">
        <input type="hidden" name="sort" value="{{ sort }}">
        <input type="hidden" name="order" value="{{ order }}">
        <input type="text" name="q" class="form-control form-control-sm" style="min-width: 160px;" value="{{ search }}" placeholder="Nom, email ou métier…">
        <button type="submit" class="btn btn-primary btn-sm">Rechercher</button>
    </form>
</div>

<div class="card admin-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped admin-table mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><a href="{{ path('app_front_commercants_list', { q: search, sort: 'id', order: sort == 'id' and order == 'asc' ? 'desc' : 'asc' }) }}" class="text-white text-decoration-none">Id</a></th>
                        <th><a href="{{ path('app_front_commercants_list', { q: search, sort: 'nom', order: sort == 'nom' and order == 'asc' ? 'desc' : 'asc' }) }}" class="text-white text-decoration-none">Nom</a></th>
                        <th><a href="{{ path('app_front_commercants_list', { q: search, sort: 'metier', order: sort == 'metier' and order == 'asc' ? 'desc' : 'asc' }) }}" class="text-white text-decoration-none">Métier</a></th>
                        <th><a href="{{ path('app_front_commercants_list', { q: search, sort: 'ville', order: sort == 'ville' and order == 'asc' ? 'desc' : 'asc' }) }}" class="text-white text-decoration-none">Ville</a></th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for c in commercants %}
                        <tr>
                            <td>{{ c.id }}</td>
                            <td>{{ c.nom }}</td>
                            <td>{{ c.metier ?? '—' }}</td>
                            <td>{{ c.ville ?? '—' }}</td>
                            <td>{{ c.email }}</td>
                            <td>{{ c.numeroTelephone }}</td>
                            <td><a href="{{ path('app_front_rendez_vous_demander') }}" class="btn btn-primary btn-sm">Demander un RDV</a></td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" class="text-center text-muted py-4">Aucun commerçant trouvé</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<p class="mt-3"><a href="{{ path('app_front_accueil') }}" class="btn btn-outline-secondary btn-sm">Retour à l'accueil</a></p>
{% endblock %}
