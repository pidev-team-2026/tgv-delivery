{% extends 'front/base.html.twig' %}

{% block title %}TGV Delivery - Votre livraison rapide et fiable à domicile{% endblock %}

{% block stylesheets %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f0fdf4 100%);
    color: #1e293b;
    overflow-x: hidden;
}

/* Navbar */
.navbar-delivery {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.5);
    padding: 0.75rem 0;
}

.navbar-container {
    max-width: 1200px;
    margin: 0 auto;
}

.navbar-brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    color: #2563eb;
}

.navbar-logo {
    height: 40px;
    width: auto;
    margin-right: 0.75rem;
}

.navbar-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    align-items: center;
}

.navbar-links > li {
    position: relative;
}

.navbar-links a {
    color: #475569;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
}

.navbar-links a:hover {
    color: #2563eb;
}

/* Dropdown Menu */
.dropdown {
    position: relative;
}

.dropdown-toggle {
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.dropdown-toggle::after {
    content: '';
    border: none;
    margin-left: 0.25rem;
}

.dropdown-toggle i {
    font-size: 0.75rem;
    transition: transform 0.3s ease;
}

.dropdown:hover .dropdown-toggle i {
    transform: rotate(180deg);
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    margin-top: 0.5rem;
}

.dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.dropdown-menu a {
    display: block;
    padding: 0.75rem 1rem;
    color: #475569;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.875rem;
    transition: background-color 0.2s ease;
}

.dropdown-menu a:hover {
    background-color: #f8fafc;
    color: #2563eb;
}

.dropdown-menu a:first-child {
    border-radius: 0.5rem 0.5rem 0 0;
}

.dropdown-menu a:last-child {
    border-radius: 0 0 0.5rem 0.5rem;
}

/* Cart Badge */
.navbar-cart {
    position: relative;
}

.cart-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #ef4444;
    color: white;
    font-size: 0.625rem;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
}

/* Auth Buttons */
.navbar-auth {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.btn-nav {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s ease;
}

.btn-nav-outline {
    background: transparent;
    color: #2563eb;
    border: 1px solid #2563eb;
}

.btn-nav-outline:hover {
    background: #2563eb;
    color: white;
}

.btn-nav-primary {
    background: #2563eb;
    color: white;
    border: 1px solid #2563eb;
}

.btn-nav-primary:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
}

/* Hero Section */
.hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem 4rem;
    background: linear-gradient(135deg, #3b82f6 0%, #10b981 50%, #06b6d4 100%);
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(6, 182, 212, 0.2) 0%, transparent 50%);
    pointer-events: none;
}

.hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
    max-width: 900px;
    width: 100%;
}

.hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.hero-subtitle {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 3rem;
    font-weight: 500;
}

.hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
}

.btn-hero {
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.btn-hero-express {
    background: linear-gradient(135deg, #10b981, #059669);
    color: #ffffff;
}

.btn-hero-express:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
}

.btn-hero-secure {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: #ffffff;
}

.btn-hero-secure:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
}

.btn-hero i {
    font-size: 1.2rem;
}

/* Responsive */
@media (max-width: 768px) {
    .navbar-container {
        padding: 0 1rem;
    }
    
    .navbar-links {
        gap: 1rem;
        flex-direction: column;
        position: fixed;
        top: 70px;
        left: -100%;
        width: 100%;
        background: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: left 0.3s ease;
        padding: 1rem;
    }
    
    .navbar-links.active {
        left: 0;
    }
    
    .navbar-auth {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .hero-section {
        padding: 5rem 1rem 3rem;
    }
    
    .hero-title {
        font-size: 2.5rem;
    }
    
    .hero-subtitle {
        font-size: 1.1rem;
    }
    
    .hero-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .btn-hero {
        width: 100%;
        max-width: 300px;
        justify-content: center;
    }
}
</style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">
            TGV Delivery
        </h1>
        
        <p class="hero-subtitle">
            Votre livraison rapide et fiable à domicile<br>
            Partout en Tunisie
        </p>
        
        <div class="hero-buttons">
            <a href="#" class="btn-hero btn-hero-express">
                <i class="fas fa-bolt"></i>
                Livraison Express
            </a>
            <a href="#" class="btn-hero btn-hero-secure">
                <i class="fas fa-shield-alt"></i>
                100% Sécurisé
            </a>
        </div>
    </div>
</section>

{% endblock %}

