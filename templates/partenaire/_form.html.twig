{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="row g-3">
        <div class="col-md-6">
            {{ form_row(form.nom) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.type) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-12">
            {{ form_row(form.addresse) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.siteweb) }}
        </div>
        <div class="col-12">
            {# Champ zone important + affichage des erreurs #}
            {{ form_row(form.zone) }}
            <div class="form-text text-muted">
                Choisis une zone existante. Si la liste est vide, crée d’abord une zone dans “Gestion des zones”.
            </div>
        </div>
        <div class="col-12">
            <div class="card border">
                <div class="card-header bg-light">
                    <strong>Contrat(s)</strong> — Date de début et date de fin du contrat (un contrat est créé par défaut)
                </div>
                <div class="card-body">
                    {{ form_row(form.contrats) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        <a class="btn btn-outline-secondary" href="{{ path('app_partenaire_index') }}">Annuler</a>
    </div>
{{ form_end(form) }}
