{% extends 'baseback.html.twig' %}

{% block title %}Nouvelle réponse - Admin{% endblock %}
{% block page_title %}Nouvelle réponse{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_back_reclamation_index') }}">Réclamations</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_back_reclamation_show', {id: reclamation.id}) }}">#{{ reclamation.id }}</a></li>
    <li class="breadcrumb-item">Nouvelle réponse</li>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <p class="text-muted mb-3">Réclamation : <strong>{{ reclamation.subject }}</strong></p>
        {{ form_start(form) }}
            {{ form_row(form.content) }}
            {{ form_row(form.author) }}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <a href="{{ path('app_back_reclamation_show', {id: reclamation.id}) }}" class="btn btn-outline-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
