{% extends 'baseback.html.twig' %}

{% block title %}Utilisateurs - Admin{% endblock %}
{% block page_title %}Utilisateurs{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">Liste</li>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Liste des utilisateurs</h5>
        <a href="{{ path('app_back_user_new') }}" class="btn btn-primary">Nouveau</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr class="border-b">
                        <th>Nom</th>
                        <th>Email</th>
                        <th>RÃ©clamations</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.reclamations|length }}</td>
                            <td class="text-end">
                                <a href="{{ path('app_back_user_show', {id: user.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                <a href="{{ path('app_back_user_edit', {id: user.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">Aucun utilisateur</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
