{% extends 'baseback.html.twig' %}

{% block title %}Modifier utilisateur - Admin{% endblock %}
{% block page_title %}Modifier utilisateur{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_back_user_index') }}">Utilisateurs</a></li>
    <li class="breadcrumb-item">Modifier</li>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.name) }}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('app_back_user_show', {id: user.id}) }}" class="btn btn-outline-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
