		.cart-badge {
			position: absolute;
			top: -6px;
			right: -6px;
			background: var(--green);
			color: white;
			font-size: 0.65rem;
			font-weight: 700;
			width: 18px;
			height: 18px;
			border-radius: 50%;
			display: none;
			align-items: center;
			justify-content: center;
		}
		.cart-icon {
			position: relative;
			cursor: pointer;
		}

		/* ‚îÄ‚îÄ CODE PROMO ‚îÄ‚îÄ */
		.promo-wrap {
			background: #f9fafb;
			border-radius: 12px;
			padding: 14px 16px;
			margin-bottom: 14px;
		}
		.promo-wrap-title {
			font-size: 0.75rem;
			font-weight: 700;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			color: #888;
			margin-bottom: 10px;
			display: flex;
			align-items: center;
			gap: 6px;
		}
		.promo-input-row {
			display: flex;
			gap: 8px;
		}
		.promo-input-row input {
			flex: 1;
			border: 1.5px solid #e8e8e8;
			border-radius: 10px;
			padding: 9px 12px;
			font-size: 0.85rem;
			font-family: 'DM Sans', sans-serif;
			outline: none;
			text-transform: uppercase;
			letter-spacing: 1px;
			font-weight: 600;
			transition: border-color 0.15s;
		}
		.promo-input-row input:focus {
			border-color: #00B37E;
		}
		.promo-input-row input::placeholder {
			text-transform: none;
			letter-spacing: 0;
			font-weight: 400;
		}
		.promo-apply-btn {
			background: #1a1a1a;
			color: white;
			border: none;
			border-radius: 10px;
			padding: 9px 16px;
			font-size: 0.82rem;
			font-weight: 700;
			cursor: pointer;
			transition: background 0.15s;
			white-space: nowrap;
		}
		.promo-apply-btn:hover {
			background: #333;
		}
		.promo-apply-btn:disabled {
			background: #ccc;
			cursor: not-allowed;
		}
		.promo-msg {
			display: none;
			align-items: center;
			gap: 6px;
			font-size: 0.8rem;
			font-weight: 600;
			margin-top: 8px;
			padding: 6px 10px;
			border-radius: 8px;
		}
		.promo-msg.success {
			background: #f0fdf9;
			color: #00B37E;
		}
		.promo-msg.error {
			background: #fff0f0;
			color: #e84545;
		}
		.promo-hint {
			font-size: 0.7rem;
			color: #bbb;
			margin-top: 6px;
		}

		/* ‚îÄ‚îÄ ESTIMATION LIVRAISON ‚îÄ‚îÄ */
		.estimation-box {
			display: none;
			align-items: center;
			gap: 8px;
			background: #f0fdf9;
			color: #00B37E;
			font-size: 0.82rem;
			font-weight: 700;
			padding: 10px 14px;
			border-radius: 10px;
			margin-top: 10px;
			border: 1.5px solid #dcfce7;
		}

		/* ‚îÄ‚îÄ TOAST ‚îÄ‚îÄ */
		.tgv-toast {
			position: fixed;
			bottom: 24px;
			right: 24px;
			background: #1a1a1a;
			color: white;
			padding: 13px 20px;
			border-radius: 12px;
			font-size: 0.88rem;
			font-weight: 500;
			box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
			z-index: 99999;
			display: flex;
			align-items: center;
			gap: 8px;
			transform: translateY(80px);
			opacity: 0;
			transition: all 0.3s cubic-bezier(0.34,1.56,0.64,1);
			pointer-events: none;
		}
		.tgv-toast.show {
			transform: translateY(0);
			opacity: 1;
		}

		/* ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
           MODALS PAIEMENT
        ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê */
		.pay-overlay {
			position: fixed;
			inset: 0;
			background: rgba(0, 0, 0, 0.6);
			z-index: 200000;
			display: none;
			align-items: center;
			justify-content: center;
			backdrop-filter:blur(6px);
			padding: 16px;
		}
		.pay-overlay.open {
			display: flex;
		}

		.pay-modal {
			background: white;
			border-radius: 24px;
			width: 100%;
			max-width: 460px;
			max-height: 92vh;
			overflow-y: auto;
			box-shadow: 0 32px 80px rgba(0, 0, 0, 0.22);
			animation: paySlideIn 0.3s cubic-bezier(0.34,1.56,0.64,1);
		}
		@keyframes paySlideIn {
			from {
				opacity: 0;
				transform: translateY(40px) scale(0.95);
			}
			to {
				opacity: 1;
				transform: translateY(0) scale(1);
			}
		}

		.pay-modal-head {
			display: flex;
			align-items: center;
			gap: 14px;
			padding: 22px 24px 18px;
			border-bottom: 1px solid #f0f0f0;
			position: sticky;
			top: 0;
			background: white;
			z-index: 1;
			border-radius: 24px 24px 0 0;
		}
		.pay-modal-ico {
			width: 48px;
			height: 48px;
			border-radius: 14px;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 1.4rem;
			flex-shrink: 0;
		}
		.pay-modal-ico.c {
			background: #f0fdf9;
			color: #00B37E;
		}
		.pay-modal-ico.v {
			background: #eff6ff;
			color: #3b82f6;
		}
		.pay-modal-ico.e {
			background: #fefce8;
			color: #ca8a04;
		}
		.pay-modal-head-txt h5 {
			margin: 0;
			font-family: 'Syne', sans-serif;
			font-weight: 800;
			font-size: 1.05rem;
		}
		.pay-modal-head-txt p {
			margin: 2px 0 0;
			font-size: 0.78rem;
			color: #999;
		}
		.pay-modal-x {
			margin-left: auto;
			background: #f5f5f5;
			border: none;
			border-radius: 50%;
			width: 32px;
			height: 32px;
			display: flex;
			align-items: center;
			justify-content: center;
			color: #555;
			cursor: pointer;
			font-size: 1rem;
			flex-shrink: 0;
			transition: background 0.15s;
		}
		.pay-modal-x:hover {
			background: #eee;
			color: #000;
		}

		.pay-modal-body {
			padding: 22px 24px 28px;
		}

		/* Champs */
		.pf {
			margin-bottom: 14px;
		}
		.pl {
			font-size: 0.7rem;
			font-weight: 700;
			text-transform: uppercase;
			letter-spacing: 0.6px;
			color: #999;
			margin-bottom: 6px;
			display: block;
