{# templates/shop/commande/_suivi_info_card.html.twig #}

<div class="row mb-4">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-clipboard-check"></i> Commande {{ commande.reference }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i class="bi bi-calendar"></i> Date de création :</strong><br>
                            {{ commande.dateCreation ? commande.dateCreation|date('d/m/Y à H:i') : '-' }}
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-arrow-repeat"></i> Dernière mise à jour :</strong><br>
                            {{ commande.dateMisAjour ? commande.dateMisAjour|date('d/m/Y à H:i') : '-' }}
                        </p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p class="mb-2">
                            <strong><i class="bi bi-cash"></i> Montant total :</strong><br>
                            <span class="text-success fs-4 fw-bold">{{ commande.totalPrix }}€</span>
                        </p>
                        <p class="mb-2">
                            <strong><i class="bi bi-box"></i> Nombre d'articles :</strong><br>
                            <span class="badge bg-info fs-6">{{ commande.produits|length }} produit(s)</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>