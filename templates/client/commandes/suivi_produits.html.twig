

<div class="row mb-4">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-bag"></i> Détails des produits</h5>
            </div>
            <div class="card-body">
                {% if commande.produits|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th>Description</th>
                                    <th class="text-end">Prix unitaire</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for produit in commande.produits %}
                                <tr>
                                    <td><strong>{{ produit.nom }}</strong></td>
                                    <td class="text-muted small">
                                        {{ produit.description|slice(0, 50) }}{% if produit.description|length > 50 %}...{% endif %}
                                    </td>
                                    <td class="text-end">
                                        <span class="text-success fw-bold">{{ produit.prix }}€</span>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td colspan="2" class="text-end">Total :</td>
                                    <td class="text-end text-success fs-5">{{ commande.totalPrix }}€</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> Aucun produit associé à cette commande.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>