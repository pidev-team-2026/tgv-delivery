{% extends "shop/base_client.html.twig" %}

{% block title %}{{ produit.nom }} - TGV Delivery{% endblock %}

{% block hero %}
<div class="hero" style="padding: 2rem;">
    <a href="/" class="btn btn-outline-light btn-sm mb-3">
        <i class="bi bi-arrow-left"></i> Retour au catalogue
    </a>
</div>
{% endblock %}

{% block content %}
<div class="row">
    <!-- IMAGE DU PRODUIT -->
    <div class="col-md-6">
        <div class="card border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 400px; display: flex; align-items: center; justify-content: center;">
            <i class="bi bi-image" style="font-size: 5rem; color: white; opacity: 0.5;"></i>
        </div>
        <div class="row mt-3 gap-2">
            <div class="col-md-3">
                <div style="width: 100%; height: 80px; background: #e9ecef; border-radius: 8px; cursor: pointer;" title="Image 1"></div>
            </div>
            <div class="col-md-3">
                <div style="width: 100%; height: 80px; background: #e9ecef; border-radius: 8px; cursor: pointer;" title="Image 2"></div>
            </div>
            <div class="col-md-3">
                <div style="width: 100%; height: 80px; background: #e9ecef; border-radius: 8px; cursor: pointer;" title="Image 3"></div>
            </div>
        </div>
    </div>

    <!-- DÉTAILS DU PRODUIT -->
    <div class="col-md-6">
        <div class="card border-0">
            <div class="card-body">
                <!-- STATUT -->
                <span class="badge {% if produit.statut == 'actif' %}bg-success{% else %}bg-danger{% endif %}">
                    {{ produit.statut|capitalize }}
                </span>

                <!-- TITRE -->
                <h1 class="mt-3 mb-2">{{ produit.nom }}</h1>

                <!-- PRIX -->
                <div style="font-size: 2.5rem; color: #ff6b35; font-weight: bold; margin: 1rem 0;">
                    {{ produit.prix }}€
                </div>

                <!-- DESCRIPTION -->
                <h5 class="mt-4">Description</h5>
                <p class="text-muted">{{ produit.description }}</p>

                <!-- STOCK -->
                <h5 class="mt-4">Stock disponible</h5>
                <div class="alert {% if produit.stock > 0 %}alert-info{% else %}alert-danger{% endif %}">
                    {% if produit.stock > 0 %}
                        <i class="bi bi-check-circle"></i> {{ produit.stock }} article(s) disponible(s)
                    {% else %}
                        <i class="bi bi-exclamation-circle"></i> Rupture de stock
                    {% endif %}
                </div>

                <!-- INFORMATIONS -->
                <h5 class="mt-4">Informations</h5>
                <table class="table table-sm">
                    <tr>
                        <td><strong>ID Produit :</strong></td>
                        <td>{{ produit.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Date création :</strong></td>
                        <td>{{ produit.dateCreation|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <td><strong>Dernière mise à jour :</strong></td>
                        <td>{{ produit.dateMisAjour|date('d/m/Y') }}</td>
                    </tr>
                </table>

                <!-- QUANTITÉ & BOUTONS -->
                <div class="mt-4">
                    {% if produit.stock > 0 %}
                        <div class="input-group mb-3" style="max-width: 150px;">
                            <button class="btn btn-outline-secondary" type="button">-</button>
                            <input type="text" class="form-control text-center" value="1">
                            <button class="btn btn-outline-secondary" type="button">+</button>
                        </div>

                        <button class="btn btn-success btn-lg w-100 mb-3">
                            <i class="bi bi-cart-plus"></i> Ajouter au panier
                        </button>
                    {% else %}
                        <button class="btn btn-secondary btn-lg w-100 mb-3" disabled>
                            <i class="bi bi-cart-x"></i> Rupture de stock
                        </button>
                    {% endif %}

                    <button class="btn btn-outline-primary btn-lg w-100">
                        <i class="bi bi-heart"></i> Ajouter aux favoris
                    </button>
                </div>

                <!-- PARTAGE -->
                <div class="mt-4 pt-4 border-top">
                    <p class="text-muted mb-3">Partager ce produit :</p>
                    <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="btn btn-sm btn-outline-info"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="btn btn-sm btn-outline-success"><i class="bi bi-whatsapp"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PRODUITS SIMILAIRES -->
<div class="mt-5">
    <h3>Produits similaires</h3>
    <div class="row mt-4">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="product-card">
                <div style="width: 100%; height: 250px; background: #e9ecef; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-image" style="font-size: 2rem; color: #999; opacity: 0.5;"></i>
                </div>
                <div class="card-body">
                    <h5 class="product-title">Produit 1</h5>
                    <p class="text-muted small">Description courte...</p>
                    <div class="product-price">29.99€</div>
                    <button class="btn btn-sm btn-success w-100">
                        <i class="bi bi-cart-plus"></i> Ajouter
                    </button>
                </div>
            </div>
        </div>
        <!-- Répéter pour d'autres produits similaires -->
    </div>
</div>
{% endblock %}
