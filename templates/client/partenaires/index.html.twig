{% extends "client/base_client.html.twig" %}

{% block title %}Nos Partenaires - TGV Delivery{% endblock %}

{% block styles %}
<style>
.partenaires-hero {
    background: linear-gradient(135deg, #1e3a5f, #2ecc71);
    color: white;
    padding: 4rem 0;
    text-align: center;
    margin-bottom: 3rem;
}

.partenaires-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
}

.partner-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    height: 100%;
    text-align: center;
}

.partner-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.partner-logo {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 3rem;
    color: #1e3a5f;
}

.partner-card h4 {
    color: #1e3a5f;
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.partner-category {
    display: inline-block;
    background: #2ecc71;
    color: white;
    padding: 0.3rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    margin-bottom: 1rem;
    font-weight: 600;
}

.partner-card p {
    color: #6c757d;
    line-height: 1.6;
}

.partner-stats {
    display: flex;
    justify-content: space-around;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e9ecef;
}

.stat-item {
    text-align: center;
}

.stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e3a5f;
}

.stat-label {
    font-size: 0.8rem;
    color: #6c757d;
}

.become-partner {
    background: white;
    border-radius: 16px;
    padding: 3rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    text-align: center;
    margin-top: 3rem;
}

.become-partner h3 {
    color: #1e3a5f;
    margin-bottom: 1rem;
}

.partner-benefits {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
}

.benefit-item {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 12px;
    text-align: left;
}

.benefit-item i {
    font-size: 2rem;
    color: #2ecc71;
    margin-bottom: 1rem;
}

.benefit-item h5 {
    color: #1e3a5f;
    margin-bottom: 0.5rem;
}

.btn-partner {
    background: linear-gradient(135deg, #1e3a5f, #2ecc71);
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    text-decoration: none;
    display: inline-block;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 1rem;
}

.btn-partner:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
    color: white;
}

.section-title {
    text-align: center;
    margin-bottom: 3rem;
}

.section-title h2 {
    color: #1e3a5f;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.section-title p {
    color: #6c757d;
}
</style>
{% endblock %}

{% block content %}
<div class="partenaires-hero">
    <div class="container">
        <h1><i class="bi bi-people"></i> Nos Partenaires</h1>
        <p class="lead">Ensemble pour une meilleure expérience de livraison</p>
    </div>
</div>

