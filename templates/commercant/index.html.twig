{% extends 'admin/base.html.twig' %}

{% block title %}Liste des Commer√ßants ‚Äî Back Office{% endblock %}

{% block breadcrumb %}
{% set breadcrumb = [
    { label: 'Tableau de bord', url: path('app_back_dashboard') },
    { label: 'Commer√ßants', url: '' }
] %}
{{ include('admin/Partials/breadcrumb.html.twig') }}
{% endblock %}

{% block body %}
<h1 class="admin-page-title">Liste des Commer√ßants</h1>

<div class="card admin-card mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-md-row flex-wrap gap-3 align-items-md-center justify-content-between mb-3">
            <a href="{{ path('app_commercant_new') }}" class="btn btn-primary">Ajouter un Commer√ßant</a>
            <form method="get" action="{{ path('app_commercant_index') }}" class="d-flex flex-wrap gap-2">
                <input type="hidden" name="sort" value="{{ sort|default('nom') }}">
                <input type="hidden" name="order" value="{{ order|default('asc') }}">
                <input type="text" name="q" class="form-control form-control-sm" style="min-width: 180px;" value="{{ search|default('') }}" placeholder="Nom, email, m√©tier, t√©l√©phone‚Ä¶">
                <button type="submit" class="btn btn-primary btn-sm">Rechercher</button>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-striped admin-table table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><a href="{{ path('app_commercant_index', { q: search|default(''), sort: 'id', order: (sort == 'id' and order == 'asc') ? 'desc' : 'asc' }) }}">Id</a></th>
                        <th><a href="{{ path('app_commercant_index', { q: search|default(''), sort: 'nom', order: (sort == 'nom' and order == 'asc') ? 'desc' : 'asc' }) }}">Nom</a></th>
                        <th><a href="{{ path('app_commercant_index', { q: search|default(''), sort: 'metier', order: (sort == 'metier' and order == 'asc') ? 'desc' : 'asc' }) }}">M√©tier</a></th>
                        <th><a href="{{ path('app_commercant_index', { q: search|default(''), sort: 'ville', order: (sort == 'ville' and order == 'asc') ? 'desc' : 'asc' }) }}">Ville</a></th>
                        <th><a href="{{ path('app_commercant_index', { q: search|default(''), sort: 'email', order: (sort == 'email' and order == 'asc') ? 'desc' : 'asc' }) }}">Email</a></th>
                        <th>T√©l√©phone</th>
                        <th style="min-width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for c in commercants %}
                        <tr>
                            <td>{{ c.id }}</td>
                            <td>{{ c.nom }}</td>
                            <td>{{ c.metier ?? '‚Äî' }}</td>
                            <td>{{ c.ville ?? '‚Äî' }}</td>
                            <td>{{ c.email }}</td>
                            <td>{{ c.numeroTelephone }}</td>
                            <td>
                                <div class="btn-group-actions">
                                    <a href="{{ path('app_commercant_show', {'id': c.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                    <a href="{{ path('app_commercant_edit', {'id': c.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalDeleteC{{ c.id }}">Supprimer</button>
                                    <div class="modal fade" id="modalDeleteC{{ c.id }}" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered modal-sm">
                                            <div class="modal-content">
                                                <div class="modal-body small">Supprimer ce commer√ßant ?</div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Non</button>
                                                    <form method="post" action="{{ path('app_commercant_delete', {'id': c.id}) }}" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c.id) }}">
                                                        <button type="submit" class="btn btn-danger btn-sm">Oui</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6"><div class="empty-state"><span class="empty-state-icon d-block mb-2">üìã</span><p class="text-muted mb-3">Aucun commer√ßant trouv√©.</p><a href="{{ path('app_commercant_new') }}" class="btn btn-primary btn-sm">Ajouter un commer√ßant</a></div></td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
