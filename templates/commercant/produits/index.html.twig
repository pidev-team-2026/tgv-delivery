{% extends 'commercant/base_commercant.html.twig' %}

{% block title %}Gestion des produits - Espace Commerçant{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-box"></i> Mes Produits</h1>
        <p class="text-muted">Gérer votre catalogue de produits</p>
    </div>
    <a href="{{ path('app_commercant_produit_new') }}" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Ajouter un produit
    </a>
</div>

<!-- BARRE DE RECHERCHE -->
<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="get" action="{{ path('app_commercant_produits') }}">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="text" 
                                   name="search" 
                                   class="form-control" 
                                   placeholder="Rechercher un produit (nom, description)..." 
                                   value="{{ search|default('') }}">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-search"></i> Chercher
                            </button>
                        </div>
                        <div class="col-md-2">
                            <a href="{{ path('app_commercant_produits') }}" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                            </a>
                        </div>
                    </div>
                    <!-- Garder les paramètres de tri -->
                    <input type="hidden" name="sort" value="{{ sortBy|default('id') }}">
                    <input type="hidden" name="order" value="{{ order|default('ASC') }}">
                </form>
            </div>
        </div>
    </div>
</div>

<!-- TABLEAU DES PRODUITS -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list"></i> Liste des produits ({{ produits|length }})</span>
        {% if search|default('') %}
            <span class="badge bg-info">Recherche: "{{ search }}"</span>
        {% endif %}
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>
                        <a href="{{ path('app_commercant_produits', {
                            search: search|default(''), 
                            sort: 'id', 
                            order: (sortBy|default('id') == 'id' and order|default('ASC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            # 
                            {% if sortBy|default('id') == 'id' %}
                                <i class="bi bi-arrow-{{ order|default('ASC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>Image</th>
                    <th>
                        <a href="{{ path('app_commercant_produits', {
                            search: search|default(''), 
                            sort: 'nom', 
                            order: (sortBy|default('id') == 'nom' and order|default('ASC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Nom
                            {% if sortBy|default('id') == 'nom' %}
                                <i class="bi bi-arrow-{{ order|default('ASC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>Catégorie</th>
                    <th>
                        <a href="{{ path('app_commercant_produits', {
                            search: search|default(''), 
                            sort: 'prix', 
                            order: (sortBy|default('id') == 'prix' and order|default('ASC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Prix
                            {% if sortBy|default('id') == 'prix' %}
                                <i class="bi bi-arrow-{{ order|default('ASC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_commercant_produits', {
                            search: search|default(''), 
                            sort: 'statut', 
                            order: (sortBy|default('id') == 'statut' and order|default('ASC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Statut
                            {% if sortBy|default('id') == 'statut' %}
                                <i class="bi bi-arrow-{{ order|default('ASC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('app_commercant_produits', {
                            search: search|default(''), 
                            sort: 'stock', 
                            order: (sortBy|default('id') == 'stock' and order|default('ASC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Stock
                            {% if sortBy|default('id') == 'stock' %}
                                <i class="bi bi-arrow-{{ order|default('ASC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if produits|length > 0 %}
                {% for produit in produits %}
                <tr>
                    <td><strong>{{ produit.id }}</strong></td>
                    <td>
                        {% if produit.image %}
                            <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                        {% else %}
                            <div class="bg-secondary rounded d-inline-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="bi bi-image text-white"></i>
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        <strong>{{ produit.nom }}</strong>
                        <br>
                        <small class="text-muted">{{ produit.description|slice(0, 50) }}{% if produit.description|length > 50 %}...{% endif %}</small>
                    </td>
                    <td>
                        <span class="badge bg-light text-dark">{{ produit.categorie }}</span>
                    </td>
                    <td>
                        <strong class="text-success">{{ produit.prix }} TND</strong>
                    </td>
                    <td>
                        {% if produit.statut == 'disponible' %}
                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Disponible</span>
                        {% elseif produit.statut == 'rupture' %}
                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> En rupture</span>
                        {% elseif produit.statut == 'bientot_disponible' %}
                            <span class="badge bg-warning"><i class="bi bi-clock"></i> Bientôt disponible</span>
                        {% elseif produit.statut == 'archive' %}
                            <span class="badge bg-secondary"><i class="bi bi-archive"></i> Archivé</span>
                        {% else %}
                            <span class="badge bg-light text-dark">{{ produit.statut }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if produit.stock > 0 %}
                            <span class="badge bg-info">{{ produit.stock }}</span>
                        {% else %}
                            <span class="badge bg-danger">0</span>
                        {% endif %}
                    </td>
                    <td class="text-center">
    <div class="btn-group" role="group">
        <a href="{{ path('app_commercant_produit_show', {'id': produit.id}) }}" 
           class="btn btn-sm btn-outline-info" 
           title="Voir les détails"
           data-bs-toggle="tooltip">
            <i class="bi bi-eye"></i>
        </a>
        <a href="{{ path('app_commercant_produit_edit', {'id': produit.id}) }}" 
           class="btn btn-sm btn-outline-warning" 
           title="Modifier ce produit"
           data-bs-toggle="tooltip">
            <i class="bi bi-pencil"></i>
        </a>
        <form method="POST" 
              action="{{ path('app_commercant_produit_toggle', {'id': produit.id}) }}" 
              style="display:inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ produit.id) }}">
            <button type="submit" 
                    class="btn btn-sm {% if produit.statut == 'disponible' %}btn-outline-danger{% else %}btn-outline-success{% endif %}" 
                    title="{% if produit.statut == 'disponible' %}Désactiver{% else %}Activer{% endif %}"
                    data-bs-toggle="tooltip">
                <i class="{% if produit.statut == 'disponible' %}bi bi-x{% else %}bi bi-check{% endif %}"></i>
            </button>
        </form>
        <form method="POST" 
              action="{{ path('app_commercant_produit_delete', {'id': produit.id}) }}" 
              style="display:inline;" 
              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
            <button type="submit" 
                    class="btn btn-sm btn-outline-danger" 
                    title="Supprimer ce produit"
                    data-bs-toggle="tooltip">
                <i class="bi bi-trash"></i>
            </button>
        </form>
    </div>
</td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="8" class="text-center py-4 text-muted">
                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                        <p class="mt-2">
                            {% if search|default('') %}
                                Aucun produit trouvé pour "{{ search }}"
                            {% else %}
                                Aucun produit trouvé
                            {% endif %}
                        </p>
                        <a href="{{ path('app_commercant_produit_new') }}" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Ajouter votre premier produit
                        </a>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
