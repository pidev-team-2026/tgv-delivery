{% extends 'commercant/base_commercant.html.twig' %}

{% block title %}Gestion des commandes - Espace Commer√ßant{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-clipboard-check"></i> Mes Commandes</h1>
        <p class="text-muted">G√©rer les commandes client</p>
    </div>
</div>

<!-- BARRE DE RECHERCHE -->
<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="get" action="{{ path('wajih_commercant_commandes') }}">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="text" 
                                   name="search" 
                                   class="form-control" 
                                   placeholder="Rechercher une commande (r√©f√©rence, client)..." 
                                   value="{{ search|default('') }}">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-search"></i> Chercher
                            </button>
                        </div>
                        <div class="col-md-2">
                            <a href="{{ path('wajih_commercant_commandes') }}" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-clockwise"></i> R√©initialiser
                            </a>
                        </div>
                    </div>
                    <input type="hidden" name="sort" value="{{ sortBy|default('id') }}">
                    <input type="hidden" name="order" value="{{ order|default('DESC') }}">
                </form>
            </div>
        </div>
    </div>
</div>

<!-- TABLEAU DES COMMANDES -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list"></i> Liste des commandes ({{ commandes|length }})</span>
        {% if search|default('') %}
            <span class="badge bg-info">Recherche: "{{ search }}"</span>
        {% endif %}
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>
                        <a href="{{ path('wajih_commercant_commandes', {
                            search: search|default(''), 
                            sort: 'id', 
                            order: (sortBy|default('id') == 'id' and order|default('DESC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            # 
                            {% if sortBy|default('id') == 'id' %}
                                <i class="bi bi-arrow-{{ order|default('DESC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('wajih_commercant_commandes', {
                            search: search|default(''), 
                            sort: 'reference', 
                            order: (sortBy|default('id') == 'reference' and order|default('DESC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            R√©f√©rence
                            {% if sortBy|default('id') == 'reference' %}
                                <i class="bi bi-arrow-{{ order|default('DESC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>Client</th>
                    <th>
                        <a href="{{ path('wajih_commercant_commandes', {
                            search: search|default(''), 
                            sort: 'totalPrix', 
                            order: (sortBy|default('id') == 'totalPrix' and order|default('DESC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Prix total
                            {% if sortBy|default('id') == 'totalPrix' %}
                                <i class="bi bi-arrow-{{ order|default('DESC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>
                        <a href="{{ path('wajih_commercant_commandes', {
                            search: search|default(''), 
                            sort: 'statut', 
                            order: (sortBy|default('id') == 'statut' and order|default('DESC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Statut
                            {% if sortBy|default('id') == 'statut' %}
                                <i class="bi bi-arrow-{{ order|default('DESC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th>Livreur</th>
                    <th>
                        <a href="{{ path('wajih_commercant_commandes', {
                            search: search|default(''), 
                            sort: 'dateCreation', 
                            order: (sortBy|default('id') == 'dateCreation' and order|default('DESC') == 'ASC') ? 'DESC' : 'ASC'
                        }) }}" class="text-decoration-none text-dark">
                            Date cr√©ation
                            {% if sortBy|default('id') == 'dateCreation' %}
                                <i class="bi bi-arrow-{{ order|default('DESC') == 'ASC' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if commandes|length > 0 %}
                {% for commande in commandes %}
                <tr>
                    <td><strong>{{ commande.id }}</strong></td>
                    <td><strong>{{ commande.reference }}</strong></td>
                    <td>
                        <div>
                            <strong>{{ commande.nomClient }}</strong>
                            <br>
                            <small class="text-muted">{{ commande.telephone }}</small>
                        </div>
                    </td>
                    <td>
                        <span class="text-success" style="font-size: 1.1rem; font-weight: bold;">
                            {{ commande.totalPrix }}‚Ç¨
                        </span>
                    </td>
                    <td>
                        {% if commande.statut == 'en_attente' %}
                            <span class="badge bg-warning"><i class="bi bi-hourglass"></i> En attente</span>
                        {% elseif commande.statut == 'confirmee' %}
                            <span class="badge bg-info"><i class="bi bi-check-circle"></i> Confirm√©e</span>
                        {% elseif commande.statut == 'en_preparation' %}
                            <span class="badge bg-primary"><i class="bi bi-gear"></i> En pr√©paration</span>
                        {% elseif commande.statut == 'prete' %}
                            <span class="badge bg-info"><i class="bi bi-check2"></i> Pr√™te</span>
                        {% elseif commande.statut == 'en_livraison' %}
                            <span class="badge bg-primary"><i class="bi bi-truck"></i> En livraison</span>
                        {% elseif commande.statut == 'livree' %}
                            <span class="badge bg-success"><i class="bi bi-check-lg"></i> Livr√©e</span>
                        {% elseif commande.statut == 'annulee' %}
                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Annul√©e</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ commande.statut }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if commande.livreur %}
                            <span class="badge bg-success">
                                <i class="bi bi-person-check"></i>
                                {{ commande.livreur.nomComplet }}
                            </span>
                        {% else %}
                            <span class="text-muted">Non assign√©</span>
                        {% endif %}
                    </td>
                    <td class="text-muted small">
                        {{ commande.dateCreation ? commande.dateCreation|date('d/m/Y H:i') : '-' }}
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a href="{{ path('wajih_commercant_commande_show', {'id': commande.id}) }}" 
                               class="btn btn-sm btn-outline-info" 
                               title="Voir les d√©tails"
                               data-bs-toggle="tooltip">
                                <i class="bi bi-eye"></i>
                            </a>
                            
                            {% if commande.statut == 'en_attente' %}
                                <form method="POST" 
                                      action="{{ path('wajih_commercant_commande_confirm', {'id': commande.id}) }}" 
                                      style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('confirm' ~ commande.id) }}">
                                    <button type="submit" 
                                            class="btn btn-sm btn-outline-success" 
                                            title="Confirmer la commande"
                                            data-bs-toggle="tooltip">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                </form>
                            {% endif %}
                            
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-warning dropdown-toggle" 
                                        data-bs-toggle="dropdown" title="Changer le statut">
                                    <i class="bi bi-arrow-repeat"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form method="POST" action="{{ path('wajih_commercant_commande_status', {'id': commande.id}) }}" style="display:inline;">
                                            <input type="hidden" name="status" value="en_preparation">
                                            <input type="hidden" name="_token" value="{{ csrf_token('status' ~ commande.id) }}">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-gear"></i> En pr√©paration
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form method="POST" action="{{ path('wajih_commercant_commande_status', {'id': commande.id}) }}" style="display:inline;">
                                            <input type="hidden" name="status" value="prete">
                                            <input type="hidden" name="_token" value="{{ csrf_token('status' ~ commande.id) }}">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-check2"></i> Pr√™te
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form method="POST" action="{{ path('wajih_commercant_commande_status', {'id': commande.id}) }}" style="display:inline;">
                                            <input type="hidden" name="status" value="livree">
                                            <input type="hidden" name="_token" value="{{ csrf_token('status' ~ commande.id) }}">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-check-lg"></i> Livr√©e
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                            
                            {# ‚úÖ FIX 1/2 : data-csrf g√©n√©r√© par Twig ici au bon moment #}
                            {% if commande.statut != 'livree' and commande.statut != 'annulee' %}
                                <button type="button" 
                                        class="btn btn-sm btn-outline-primary" 
                                        title="Affecter un livreur"
                                        data-bs-toggle="tooltip"
                                        data-commande-id="{{ commande.id }}"
                                        data-commande-ref="{{ commande.reference }}"
                                        data-csrf="{{ csrf_token('assign' ~ commande.id) }}"
                                        onclick="openLivreurModal(this)">
                                    <i class="bi bi-truck"></i>
                                </button>
                            {% endif %}
                            
                            <a href="{{ path('wajih_commercant_commande_contact', {'id': commande.id}) }}" 
                               class="btn btn-sm btn-outline-secondary" 
                               title="Contacter le client"
                               data-bs-toggle="tooltip">
                                <i class="bi bi-envelope"></i>
                            </a>
                            
                            {% if commande.statut != 'livree' and commande.statut != 'annulee' %}
                                <form method="POST" 
                                      action="{{ path('wajih_commercant_commande_cancel', {'id': commande.id}) }}" 
                                      style="display:inline;" 
                                      onsubmit="return confirm('√ätes-vous s√ªr de vouloir annuler cette commande ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ commande.id) }}">
                                    <button type="submit" 
                                            class="btn btn-sm btn-outline-danger" 
                                            title="Annuler la commande"
                                            data-bs-toggle="tooltip">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="8" class="text-center py-4 text-muted">
                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                        <p class="mt-2">
                            {% if search|default('') %}
                                Aucune commande trouv√©e pour "{{ search }}"
                            {% else %}
                                Aucune commande trouv√©e
                            {% endif %}
                        </p>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>

<!-- ‚ïê‚ïê MODAL ASSIGNATION LIVREUR ‚ïê‚ïê -->
<div class="lv-overlay" id="lvOverlay">
    <div class="lv-modal">
        <div class="lv-head">
            <div class="lv-head-ico"><i class="bi bi-truck"></i></div>
            <div><h5>Assigner un livreur</h5><p id="modalCommandeRef"></p></div>
            <button class="lv-close" onclick="closeLivreurModal()"><i class="bi bi-x"></i></button>
        </div>

        <div class="lv-body">
            <div class="lv-tabs">
                <button class="lv-tab active" id="tabP" onclick="switchLivreurTab('propres')">
                    <i class="bi bi-person-badge"></i> Internes
                    <span class="lv-tab-badge" id="cntP">0</span>
                </button>
                <button class="lv-tab" id="tabA" onclick="switchLivreurTab('partenaires')">
                    <i class="bi bi-building"></i> Partenaires
                    <span class="lv-tab-badge" id="cntA">0</span>
                </button>
            </div>

            <input type="text" class="lv-search" id="lvSearch"
                   placeholder="Rechercher par nom, t√©l√©phone, zone..."
                   oninput="filterLivreurCards(this.value)">

            <div id="panelP">
                <div class="lv-grid" id="gridP"></div>
                <div class="lv-empty" id="emptyP" style="display:none;"><i class="bi bi-person-x"></i> Aucun livreur interne disponible.</div>
            </div>

            <div id="panelA" style="display:none;">
                <div class="lv-grid" id="gridA"></div>
                <div class="lv-empty" id="emptyA" style="display:none;"><i class="bi bi-building-x"></i> Aucun partenaire disponible.</div>
            </div>
        </div>

        <div class="lv-footer">
            <button class="btn-lv-cancel" onclick="closeLivreurModal()"><i class="bi bi-x"></i> Annuler</button>
            <button class="btn-lv-ok" id="btnOk" disabled onclick="confirmerLivreur()">
                <i class="bi bi-check-lg"></i> Assigner ce livreur
            </button>
        </div>
    </div>
</div>

<div class="cm-toast" id="toast"><i class="bi bi-check-circle-fill" style="color:#00B37E;"></i><span id="toastMsg"></span></div>

<script>
let currentCommandeId  = null;
let currentCsrfToken   = null;   // ‚úÖ FIX : stock√© ici depuis le bouton
let selectedLivreurId  = null;
let livreursData       = { propres: [], partenaires: [] };

// ‚îÄ‚îÄ ‚úÖ FIX 2/2 : openLivreurModal re√ßoit le bouton (this)
//    et lit ses data-attributes au lieu de chercher une meta
function openLivreurModal(btn) {
    currentCommandeId = btn.dataset.commandeId;
    currentCsrfToken  = btn.dataset.csrf;          // ‚Üê token Symfony correct
    const ref         = btn.dataset.commandeRef;

    document.getElementById('modalCommandeRef').textContent = ref;
    document.getElementById('lvOverlay').classList.add('open');

    // Reset
    selectedLivreurId = null;
    document.getElementById('btnOk').disabled = true;
    document.getElementById('gridP').innerHTML = '<p class="text-muted text-center py-3">Chargement...</p>';
    document.getElementById('gridA').innerHTML = '';

    fetch(`/commercant/commandes/${currentCommandeId}/livreurs-dispo`)
        .then(r => r.json())
        .then(data => {
            livreursData = data;
            renderLivreurs();
        })
        .catch(err => {
            console.error('Erreur chargement livreurs:', err);
            showToast('‚ùå Erreur lors du chargement des livreurs');
        });
}

function closeLivreurModal() {
    document.getElementById('lvOverlay').classList.remove('open');
    selectedLivreurId = null;
    document.querySelectorAll('.lv-card').forEach(c => c.classList.remove('selected'));
    document.getElementById('btnOk').disabled = true;
}

document.getElementById('lvOverlay').addEventListener('click', e => { 
    if(e.target === e.currentTarget) closeLivreurModal(); 
});

// ‚îÄ‚îÄ Rendu des livreurs ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
function renderLivreurs() {
    renderLivreurGrid('propres',     livreursData.propres);
    renderLivreurGrid('partenaires', livreursData.partenaires);
    document.getElementById('cntP').textContent = livreursData.propres.length;
    document.getElementById('cntA').textContent = livreursData.partenaires.length;
    document.getElementById('emptyP').style.display = livreursData.propres.length     === 0 ? 'block' : 'none';
    document.getElementById('emptyA').style.display = livreursData.partenaires.length === 0 ? 'block' : 'none';
}

function renderLivreurGrid(type, livreurs) {
    const grid = document.getElementById(type === 'propres' ? 'gridP' : 'gridA');
    if (livreurs.length === 0) { grid.innerHTML = ''; return; }

    grid.innerHTML = livreurs.map(l => `
        <div class="lv-card"
             data-id="${l.id}"
             data-nom="${l.nomComplet}"
             data-tel="${l.telephone}"
             data-search="${(l.nomComplet+' '+l.telephone+' '+(l.zonesCouvertes||'')+' '+(l.societePartenaire||'')).toLowerCase()}"
             style="border:2px solid #f0f0f0;border-radius:14px;padding:14px;cursor:pointer;transition:all 0.15s;position:relative;">
            <div style="display:flex;align-items:center;gap:10px;margin-bottom:10px;">
                <div style="width:40px;height:40px;border-radius:50%;
                     background:${type==='partenaires'?'linear-gradient(135deg,#3b82f6,#2563eb)':'linear-gradient(135deg,#00B37E,#059669)'};
                     display:flex;align-items:center;justify-content:center;
                     color:white;font-weight:800;font-size:0.9rem;flex-shrink:0;">
                    ${type==='partenaires'&&l.societePartenaire ? l.societePartenaire.slice(0,2).toUpperCase() : l.nomComplet.split(' ').map(n=>n[0]).join('').toUpperCase().slice(0,2)}
                </div>
                <div>
                    <div style="font-weight:700;font-size:0.88rem;color:#1a1a1a;">${l.societePartenaire||l.nomComplet}</div>
                    <div style="font-size:0.76rem;color:#aaa;">${l.telephone}</div>
                </div>
            </div>
            <div style="display:flex;flex-wrap:wrap;gap:5px;">
                <span style="background:#f5f5f5;border-radius:6px;padding:3px 8px;font-size:0.72rem;font-weight:600;color:#555;">${l.vehiculeLibelle||'‚Äî'}</span>
                ${l.zonesCouvertes ? `<span style="background:#f0fdf9;border-radius:6px;padding:3px 8px;font-size:0.72rem;font-weight:600;color:#059669;">üìç ${l.zonesCouvertes}</span>` : ''}
                ${l.note           ? `<span style="background:#f5f5f5;border-radius:6px;padding:3px 8px;font-size:0.72rem;font-weight:600;color:#555;">‚≠ê ${l.note}</span>` : ''}
                ${l.nombreLivraisons ? `<span style="background:#f5f5f5;border-radius:6px;padding:3px 8px;font-size:0.72rem;font-weight:600;color:#555;">${l.nombreLivraisons} livr.</span>` : ''}
            </div>
        </div>
    `).join('');

    // Click sur chaque carte ‚Äî pas de probl√®me enfants car inline HTML
    grid.querySelectorAll('.lv-card').forEach(card => {
        card.addEventListener('click', function() {
            document.querySelectorAll('.lv-card').forEach(c => {
                c.style.borderColor = '#f0f0f0';
                c.style.background  = 'white';
            });
            this.style.borderColor = '#00B37E';
            this.style.background  = '#f0fdf9';

            selectedLivreurId = this.dataset.id;
            console.log('S√©lectionn√© id=', selectedLivreurId); // debug
            document.getElementById('btnOk').disabled = false;
        });
    });
}

// ‚îÄ‚îÄ Onglets ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
function switchLivreurTab(type) {
    document.getElementById('panelP').style.display = type === 'propres'    ? '' : 'none';
    document.getElementById('panelA').style.display = type === 'partenaires' ? '' : 'none';
    document.getElementById('tabP').classList.toggle('active', type === 'propres');
    document.getElementById('tabA').classList.toggle('active', type === 'partenaires');
    document.getElementById('lvSearch').value = '';
    filterLivreurCards('');
}

function filterLivreurCards(query) {
    document.querySelectorAll('.lv-card').forEach(card => {
        card.style.display = card.dataset.search.includes(query.toLowerCase()) ? '' : 'none';
    });
}

// ‚îÄ‚îÄ ‚úÖ Confirmer ‚Äî utilise currentCsrfToken stock√© √† l'ouverture
function confirmerLivreur() {
    if (!selectedLivreurId) { showToast('‚ùå S√©lectionnez un livreur.'); return; }

    const btn = document.getElementById('btnOk');
    btn.disabled = true;
    btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Assignation...';

    const fd = new FormData();
    fd.append('livreur_id', selectedLivreurId);
    fd.append('_token',     currentCsrfToken);   // ‚Üê token correct ici

    console.log('POST livreur_id=', selectedLivreurId, 'token=', currentCsrfToken); // debug

    fetch(`/commercant/commandes/${currentCommandeId}/assign-livreur`, {
        method: 'POST',
        body: fd
    })
    .then(r => r.json())
    .then(res => {
        if (res.success) {
            closeLivreurModal();
            showToast('‚úÖ ' + res.message);
            setTimeout(() => location.reload(), 1800);
        } else {
            showToast('‚ùå ' + res.message);
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-check-lg"></i> Assigner ce livreur';
        }
    })
    .catch(err => {
        console.error(err);
        showToast('‚ùå Erreur r√©seau.');
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-check-lg"></i> Assigner ce livreur';
    });
}

function showToast(msg) {
    const t = document.getElementById('toast');
    document.getElementById('toastMsg').textContent = msg;
    t.classList.add('show');
    setTimeout(() => t.classList.remove('show'), 3500);
}
</script>
{% endblock %}
