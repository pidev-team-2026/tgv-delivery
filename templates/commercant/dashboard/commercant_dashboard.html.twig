{% extends 'commercant/base_commercant.html.twig' %}

{% block title %}Tableau de bord - Espace Commerçant{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-speedometer2"></i> Tableau de bord</h1>
        <p class="text-muted">Vue d'ensemble de votre activité commerciale</p>
    </div>
    <div>
       
    </div>
</div>

<!-- STATISTICS CARDS -->
<div class="row">
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between mb-4">
                    <div class="d-flex gap-4 align-items-center">
                        <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                            <i class="bi bi-box"></i>
                        </div>
                        <div>
                            <div class="fs-4 fw-bold text-dark">
                                <span class="counter">{{ totalProduits }}</span>
                            </div>
                            <h3 class="fs-13 fw-semibold text-truncate-1-line">Produits</h3>
                        </div>
                    </div>
                </div>
                <div class="pt-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="{{ path('wajih_commercant_produits') }}" class="fs-12 fw-medium text-muted">Voir tous</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between mb-4">
                    <div class="d-flex gap-4 align-items-center">
                        <div class="avatar-text avatar-lg bg-soft-success text-success">
                            <i class="bi bi-clipboard-check"></i>
                        </div>
                        <div>
                            <div class="fs-4 fw-bold text-dark">
                                <span class="counter">{{ totalCommandes }}</span>
                            </div>
                            <h3 class="fs-13 fw-semibold text-truncate-1-line">Commandes</h3>
                        </div>
                    </div>
                </div>
                <div class="pt-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <a href="{{ path('wajih_commercant_commandes') }}" class="fs-12 fw-medium text-muted">Voir toutes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between mb-4">
                    <div class="d-flex gap-4 align-items-center">
                        <div class="avatar-text avatar-lg bg-soft-warning text-warning">
                            <i class="bi bi-currency-euro"></i>
                        </div>
                        <div>
                            <div class="fs-4 fw-bold text-dark">
                                <span>{{ totalRevenus|number_format(2, ',', ' ') }}TND</span>
                            </div>
                            <h3 class="fs-13 fw-semibold text-truncate-1-line">Revenus</h3>
                        </div>
                    </div>
                </div>
                <div class="pt-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fs-12 fw-medium text-muted">Ce mois</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between mb-4">
                    <div class="d-flex gap-4 align-items-center">
                        <div class="avatar-text avatar-lg bg-soft-danger text-danger">
                            <i class="bi bi-cart-check"></i>
                        </div>
                        <div>
                            <div class="fs-4 fw-bold text-dark">
                                <span class="counter">{{ totalVendus }}</span>
                            </div>
                            <h3 class="fs-13 fw-semibold text-truncate-1-line">Produits vendus</h3>
                        </div>
                    </div>
                </div>
                <div class="pt-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fs-12 fw-medium text-muted">Total</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- RECENT ACTIVITY -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title"><i class="bi bi-clock-history me-2"></i>Commandes récentes</h5>
            </div>
            <div class="card-body custom-card-action p-0">
                {% if commandesRecents|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <tbody>
                            {% for commande in commandesRecents %}
                                <tr>
                                    <td><strong>{{ commande.reference }}</strong><br><small class="text-muted">{{ commande.dateCreation|date('d/m/Y H:i') }}</small></td>
                                    <td>
                                        {% if commande.statut == 'en_attente' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% elseif commande.statut == 'confirmee' %}
                                            <span class="badge bg-info">Confirmée</span>
                                        {% elseif commande.statut == 'en_preparation' %}
                                            <span class="badge bg-primary">En préparation</span>
                                        {% elseif commande.statut == 'en_livraison' %}
                                            <span class="badge bg-primary">En livraison</span>
                                        {% elseif commande.statut == 'livree' %}
                                            <span class="badge bg-success">Livrée</span>
                                        {% elseif commande.statut == 'annulee' %}
                                            <span class="badge bg-danger">Annulée</span>
                                        {% endif %}
                                    </td>
                                    <td><span class="text-success fw-bold">{{ commande.totalPrix|number_format(2, ',', ' ') }} TND</span></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center p-3">
                        <a href="{{ path('wajih_commercant_commandes') }}" class="fs-12 fw-medium text-muted">Voir toutes les commandes</a>
                    </div>
                {% else %}
                    <p class="text-muted text-center p-4">Aucune commande récente</p>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Produits récents</h5>
            </div>
            <div class="card-body custom-card-action p-0">
                {% if produitsRecents|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <tbody>
                            {% for produit in produitsRecents %}
                                <tr>
                                    <td><strong>{{ produit.nom }}</strong><br><small class="text-muted">{{ produit.dateCreation|date('d/m/Y') }}</small></td>
                                    <td>
                                        {% if produit.statut == 'disponible' %}
                                            <span class="badge bg-success">Disponible</span>
                                        {% elseif produit.statut == 'rupture' %}
                                            <span class="badge bg-danger">En rupture</span>
                                        {% elseif produit.statut == 'bientot_disponible' %}
                                            <span class="badge bg-warning">Bientôt disponible</span>
                                        {% elseif produit.statut == 'archive' %}
                                            <span class="badge bg-secondary">Archivé</span>
                                        {% endif %}
                                    </td>
                                    <td><span class="text-success fw-bold">{{ produit.prix }}€</span></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center p-3">
                        <a href="{{ path('wajih_commercant_produits') }}" class="fs-12 fw-medium text-muted">Voir tous les produits</a>
                    </div>
                {% else %}
                    <p class="text-muted text-center p-4">Aucun produit récent</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- QUICK ACTIONS -->
<div class="row mt-4">
    <div class="col-lg-6">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="bi bi-lightning text-warning me-2"></i>Actions rapides
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('wajih_commercant_produit_new') }}" class="btn btn-light-brand">
                        <i class="bi bi-plus-circle me-2"></i> Ajouter un produit
                    </a>
                    <a href="{{ path('wajih_commercant_produits') }}" class="btn btn-light-brand">
                        <i class="bi bi-box me-2"></i> Gérer les produits
                    </a>
                    <a href="{{ path('wajih_commercant_commandes') }}" class="btn btn-light-brand">
                        <i class="bi bi-clipboard-check me-2"></i> Voir les commandes
                    </a>
                    <a href="{{ path('wajih_commercant_dashboard') }}" class="btn btn-light-brand">
                        <i class="bi bi-speedometer2 me-2"></i> Tableau de bord
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
