{% extends 'commercant/base_commercant.html.twig' %}

{% block title %}Tableau de bord - Espace Commerçant{% endblock %}

{% block body %}
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-speedometer2"></i> Tableau de bord</h1>
        <p class="text-muted">Vue d'ensemble de votre activité commerciale</p>
    </div>
    <div>
        <a href="{{ path('app_commercant_produit_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouveau produit
        </a>
    </div>
</div>

<!-- STATISTICS CARDS -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{ totalProduits }}</h4>
                        <p class="card-text">Produits</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-box" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{ totalCommandes }}</h4>
                        <p class="card-text">Commandes</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-clipboard-check" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{ totalRevenus|number_format(2, ',', ' ') }}€</h4>
                        <p class="card-text">Revenus</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-currency-euro" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{ totalVendus }}</h4>
                        <p class="card-text">Produits vendus</p>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-cart-check" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- RECENT ACTIVITY -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-clock-history"></i> Commandes récentes</h5>
            </div>
            <div class="card-body">
                {% if commandesRecents|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for commande in commandesRecents %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ commande.reference }}</strong>
                                    <br>
                                    <small class="text-muted">{{ commande.dateCreation|date('d/m/Y H:i') }}</small>
                                </div>
                                <div>
                                    {% if commande.statut == 'en_attente' %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% elseif commande.statut == 'confirmee' %}
                                        <span class="badge bg-info">Confirmée</span>
                                    {% elseif commande.statut == 'en_preparation' %}
                                        <span class="badge bg-primary">En préparation</span>
                                    {% elseif commande.statut == 'prete' %}
                                        <span class="badge bg-info">Prête</span>
                                    {% elseif commande.statut == 'en_livraison' %}
                                        <span class="badge bg-primary">En livraison</span>
                                    {% elseif commande.statut == 'livree' %}
                                        <span class="badge bg-success">Livrée</span>
                                    {% elseif commande.statut == 'annulee' %}
                                        <span class="badge bg-danger">Annulée</span>
                                    {% endif %}
                                    <span class="text-success fw-bold">{{ commande.totalPrix }}€</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="text-center mt-3">
                        <a href="{{ path('app_commercant_commandes') }}" class="btn btn-outline-primary">
                            Voir toutes les commandes
                        </a>
                    </div>
                {% else %}
                    <p class="text-muted text-center">Aucune commande récente</p>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-box-seam"></i> Produits récents</h5>
            </div>
            <div class="card-body">
                {% if produitsRecents|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for produit in produitsRecents %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ produit.nom }}</strong>
                                    <br>
                                    <small class="text-muted">{{ produit.dateCreation|date('d/m/Y') }}</small>
                                </div>
                                <div>
                                    {% if produit.statut == 'disponible' %}
                                        <span class="badge bg-success">Disponible</span>
                                    {% elseif produit.statut == 'rupture' %}
                                        <span class="badge bg-danger">En rupture</span>
                                    {% elseif produit.statut == 'bientot_disponible' %}
                                        <span class="badge bg-warning">Bientôt disponible</span>
                                    {% elseif produit.statut == 'archive' %}
                                        <span class="badge bg-secondary">Archivé</span>
                                    {% endif %}
                                    <span class="text-success fw-bold">{{ produit.prix }}€</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="text-center mt-3">
                        <a href="{{ path('app_commercant_produits') }}" class="btn btn-outline-primary">
                            Voir tous les produits
                        </a>
                    </div>
                {% else %}
                    <p class="text-muted text-center">Aucun produit récent</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- QUICK ACTIONS -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-lightning"></i> Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_commercant_produit_new') }}" class="btn btn-success w-100">
                            <i class="bi bi-plus-circle"></i> Ajouter un produit
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_commercant_produits') }}" class="btn btn-primary w-100">
                            <i class="bi bi-box"></i> Gérer les produits
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_commercant_commandes') }}" class="btn btn-info w-100">
                            <i class="bi bi-clipboard-check"></i> Voir les commandes
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_commercant_dashboard') }}" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-speedometer2"></i> Tableau de bord
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
