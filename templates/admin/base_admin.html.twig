<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="{% block meta_description %}TGV Delivery - Administration{% endblock %}" />
    <meta name="author" content="TGV Delivery" />
    
    <title>{% block title %}Dashboard{% endblock %} - TGV Delivery Admin</title>
    
    {# Favicon #}
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
    
    {# Bootstrap CSS #}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
    
    {# Vendors CSS #}
    <link rel="stylesheet" type="text/css" href="{{ asset('vendors/css/vendors.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('vendors/css/daterangepicker.min.css') }}" />
    
    {# Custom Theme CSS #}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/theme.min.css') }}" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        :root {
            --nxl-sidebar-width: 280px;
            --nxl-header-height: 70px;
        }

        .btn i[class^="bi"],
        .btn i[class^="feather"],
        .btn-group i[class^="bi"],
        .btn-group i[class^="feather"] {
            display: inline-block !important;
            font-size: 14px !important;
            line-height: 1 !important;
            opacity: 1 !important;
            visibility: visible !important;
        }

        .btn-group .btn {
            min-width: 34px;
        }

        .nxl-navigation {
            width: var(--nxl-sidebar-width);
        }

        .nxl-header {
            position: fixed;
            top: 0;
            left: var(--nxl-sidebar-width);
            width: calc(100% - var(--nxl-sidebar-width));
            z-index: 1030;
            transition: none !important;
        }

        .nxl-container {
            margin-left: var(--nxl-sidebar-width);
        }

        .nxl-content {
            padding-top: var(--nxl-header-height);
        }

        @media (max-width: 991.98px) {
            .nxl-container {
                margin-left: 0;
            }

            .nxl-header {
                left: 0;
                width: 100%;
            }
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>

<body>
    {# Navigation Sidebar #}
    {% include 'admin/partials/admin_sidebar.html.twig' %}
    
    {# Main Container #}
    <main class="nxl-container">
        {# Header #}
        {% include 'admin/partials/admin_navbar.html.twig' %}
        
        {# Main Content #}
        <div class="nxl-content">
            {# Page Header #}
            <div class="page-header">
                <div class="page-header-left d-flex align-items-center">
                    <div class="page-header-title">
                        <h5 class="m-b-10">{% block page_title %}Dashboard{% endblock %}</h5>
                    </div>
                    <ul class="breadcrumb">
                        {% block breadcrumb %}
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
                        {% endblock %}
                    </ul>
                </div>
                <div class="page-header-right ms-auto">
                    <div class="page-header-right-items">
                        <div class="d-flex d-md-none">
                            <a href="javascript:void(0)" class="page-header-right-close-toggle">
                                <i class="bi bi-arrow-left me-2"></i>
                                <span>Back</span>
                            </a>
                        </div>
                        <div class="d-flex align-items-center gap-2 page-header-right-items-wrapper">
                            {% block page_actions %}{% endblock %}
                        </div>
                    </div>
                    <div class="d-md-none d-flex align-items-center">
                        <a href="javascript:void(0)" class="page-header-right-open-toggle">
                            <i class="bi bi-list fs-20"></i>
                        </a>
                    </div>
                </div>
            </div>
            
            {# Flash Messages #}
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            
            {# Main Content Body #}
            <div class="main-content">
                {% block body %}{% endblock %}
            </div>
        </div>
        
        {# Footer #}
        {% include 'admin/partials/admin_footer.html.twig' %}
    </main>
    
    {# Customizer (optional - can be removed) #}
    {# {% include 'admin/partials/customizer.html.twig' %} #}
    
    {# Bootstrap & Vendors JS #}
    <script src="{{ asset('vendors/js/vendors.min.js') }}"></script>
    
    {# Common Init JS #}
    <script src="{{ asset('js/common-init.min.js') }}"></script>
    
    {# Dashboard Charts (only for dashboard page) #}
    {% block javascripts %}{% endblock %}
</body>
</html>
