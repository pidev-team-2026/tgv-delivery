<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TGV Delivery - Back Office{% endblock %}</title>
    <link rel="icon" href="{{ asset('admin/images/favicon.ico') }}" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('admin/css/tgv-delivery-theme.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="tgv-wrapper">
        <!-- Sidebar -->
        <aside class="tgv-sidebar">
            <div class="tgv-sidebar-brand">
                <a href="{{ path('app_back_dashboard') }}" class="tgv-sidebar-brand-link">
                    <img src="{{ asset('admin/images/logo-tgv-delivery.png') }}" alt="TGV Delivery" class="tgv-sidebar-brand-logo">
                </a>
            </div>

            <div class="tgv-sidebar-section">
                <h3 class="tgv-sidebar-title">NAVIGATION</h3>
                <ul class="tgv-sidebar-nav">
                    <li class="tgv-sidebar-item">
                        <a href="{{ path('app_back_dashboard') }}" class="tgv-sidebar-link {% if app.request.attributes.get('_route') == 'app_back_dashboard' %}active{% endif %}">
                            <i class="fas fa-tachometer-alt tgv-sidebar-icon"></i>
                            Dashboard
                        </a>
                    </li>
                </ul>
            </div>

            <div class="tgv-sidebar-section">
                <h3 class="tgv-sidebar-title">GESTION</h3>
                <ul class="tgv-sidebar-nav">
                    <li class="tgv-sidebar-item">
                        <a href="#" class="tgv-sidebar-link">
                            <i class="fas fa-shopping-cart tgv-sidebar-icon"></i>
                            Commandes
                            <i class="fas fa-chevron-right tgv-sidebar-chevron"></i>
                        </a>
                        <ul class="tgv-submenu">
                            <li><a href="#">Liste des commandes</a></li>
                        </ul>
                    </li>
                    <li class="tgv-sidebar-item">
                        <a href="#" class="tgv-sidebar-link">
                            <i class="fas fa-box tgv-sidebar-icon"></i>
                            Produits
                            <i class="fas fa-chevron-right tgv-sidebar-chevron"></i>
                        </a>
                        <ul class="tgv-submenu">
                            <li><a href="#">Liste des produits</a></li>
                            <li><a href="#">Ajouter un produit</a></li>
                        </ul>
                    </li>
                    <li class="tgv-sidebar-item">
                        <a href="#" class="tgv-sidebar-link {% if app.request.attributes.get('_route') starts with 'app_rendez_vous_' %}active{% endif %}">
                            <i class="fas fa-calendar-check tgv-sidebar-icon"></i>
                            Rendez-vous
                            <i class="fas fa-chevron-right tgv-sidebar-chevron"></i>
                        </a>
                        <ul class="tgv-submenu">
                            <li><a href="{{ path('app_rendez_vous_index') }}">Liste des rendez-vous</a></li>
                        </ul>
                    </li>
                    <li class="tgv-sidebar-item">
                        <a href="#" class="tgv-sidebar-link {% if app.request.attributes.get('_route') starts with 'app_commercant_' %}active{% endif %}">
                            <i class="fas fa-store tgv-sidebar-icon"></i>
                            Commerçants
                            <i class="fas fa-chevron-right tgv-sidebar-chevron"></i>
                        </a>
                        <ul class="tgv-submenu">
                            <li><a href="{{ path('app_commercant_index') }}">Liste des commerçants</a></li>
                            <li><a href="{{ path('app_commercant_new') }}">Ajouter un commerçant</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div class="tgv-sidebar-section">
                <h3 class="tgv-sidebar-title">VENTES</h3>
                <ul class="tgv-sidebar-nav">
                    <li class="tgv-sidebar-item">
                        <a href="#" class="tgv-sidebar-link">
                            <i class="fas fa-chart-line tgv-sidebar-icon"></i>
                            Statistiques
                            <i class="fas fa-chevron-right tgv-sidebar-chevron"></i>
                        </a>
                        <ul class="tgv-submenu">
                            <li><a href="#">Rapport des ventes</a></li>
                            <li><a href="#">Rapport des livraisons</a></li>
                            <li><a href="#">Statistiques générales</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div class="tgv-sidebar-section">
                <h3 class="tgv-sidebar-title">PARAMÈTRES</h3>
                <ul class="tgv-sidebar-nav">
                    <li class="tgv-sidebar-item">
                        <a href="#" class="tgv-sidebar-link">
                            <i class="fas fa-cog tgv-sidebar-icon"></i>
                            Configuration
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="tgv-main">
            <!-- Navbar -->
            <header class="tgv-navbar">
                <div class="tgv-navbar-left">
                    <button class="tgv-navbar-icon" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <nav class="tgv-breadcrumb">
                        <a href="{{ path('app_back_dashboard') }}" class="tgv-breadcrumb-item">Dashboard</a>
                        <span class="tgv-breadcrumb-separator">›</span>
                        <span class="tgv-breadcrumb-item">Accueil</span>
                    </nav>
                </div>
                
                <div class="tgv-navbar-right">
                    <button class="tgv-navbar-icon">
                        <i class="fas fa-search"></i>
                    </button>
                    <button class="tgv-navbar-icon">
                        <i class="fas fa-expand"></i>
                    </button>
                    <button class="tgv-navbar-icon">
                        <i class="fas fa-moon"></i>
                    </button>
                    <button class="tgv-navbar-icon notification">
                        <i class="fas fa-bell"></i>
                        <span class="tgv-notification-badge">3</span>
                    </button>
                    <img src="https://picsum.photos/seed/user123/40/40.jpg" alt="User" class="tgv-user-avatar">
                </div>
            </header>

            <!-- Content Area -->
            <main class="tgv-content">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {% block body %}{% endblock %}
            </main>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
