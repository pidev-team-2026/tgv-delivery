<header class="nxl-header">
    <div class="header-wrapper">
        {# Header Left #}
        <div class="header-left d-flex align-items-center gap-4">
            {# Mobile Toggle #}
            <a href="javascript:void(0);" class="nxl-head-mobile-toggler" id="mobile-collapse">
                <div class="hamburger hamburger--arrowturn">
                    <div class="hamburger-box">
                        <div class="hamburger-inner"></div>
                    </div>
                </div>
            </a>
            
            {# Desktop Menu Toggle #}
            <div class="nxl-navigation-toggle">
                <a href="javascript:void(0);" id="menu-mini-button">
                    <i class="bi bi-list"></i>
                </a>
                <a href="javascript:void(0);" id="menu-expend-button" style="display: none">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
        
        {# Header Right #}
        <div class="header-right ms-auto">
            <div class="d-flex align-items-center gap-3">
                
                {# Barre de recherche professionnelle - toujours visible #}
                <div class="nxl-h-item d-none d-md-flex" style="min-width: 350px;">
                    <form method="get" id="global-search-form" class="w-100">
                        <div class="input-group search-form">
                            <select name="type" class="form-select" style="max-width: 120px; border-right: 0;" id="search-type-select">
                                <option value="produits" {{ app.request.query.get('type') == 'produits' or app.request.query.get('type') is empty ? 'selected' : '' }}>Produits</option>
                                <option value="commandes" {{ app.request.query.get('type') == 'commandes' ? 'selected' : '' }}>Commandes</option>
                            </select>
                            <span class="input-group-text bg-white border-start-0 border-end-0">
                                <i class="bi bi-search fs-6 text-muted"></i>
                            </span>
                            <input 
                                type="text" 
                                name="search" 
                                class="form-control border-start-0 search-input-field" 
                                placeholder="Rechercher..." 
                                value="{{ app.request.query.get('search') }}"
                                id="global-search-input"
                            />
                            <button type="submit" class="input-group-text bg-white border-start-0" style="border-left: 0;">
                                <i class="bi bi-arrow-right text-primary"></i>
                            </button>
                        </div>
                    </form>
                    <script>
                        document.getElementById('global-search-form').addEventListener('submit', function(e) {
                            const type = document.getElementById('search-type-select').value;
                            const search = document.getElementById('global-search-input').value;
                            if (type === 'produits') {
                                this.action = '{{ path('wajih_produit_index') }}';
                            } else {
                                this.action = '{{ path('wajih_commande_index') }}';
                            }
                        });
                    </script>
                </div>
                
                {# Search Mobile Toggle #}
                <div class="dropdown nxl-h-item d-md-none">
                    <a href="javascript:void(0);" class="nxl-head-link me-0" data-bs-toggle="dropdown" data-bs-auto-close="outside">
                        <i class="bi bi-search"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end nxl-h-dropdown nxl-search-dropdown" style="min-width: 280px;">
                        <form method="get" id="mobile-search-form">
                            <div class="mb-2">
                                <select name="type" class="form-select form-select-sm" id="mobile-search-type">
                                    <option value="produits">Produits</option>
                                    <option value="commandes">Commandes</option>
                                </select>
                            </div>
                            <div class="input-group search-form">
                                <span class="input-group-text">
                                    <i class="bi bi-search fs-6 text-muted"></i>
                                </span>
                                <input 
                                    type="text" 
                                    name="search" 
                                    class="form-control search-input-field" 
                                    placeholder="Rechercher..." 
                                    value="{{ app.request.query.get('search') }}"
                                />
                                <button type="submit" class="input-group-text">
                                    <i class="bi bi-arrow-right text-primary"></i>
                                </button>
                            </div>
                        </form>
                        <script>
                            document.getElementById('mobile-search-form').addEventListener('submit', function(e) {
                                const type = document.getElementById('mobile-search-type').value;
                                if (type === 'produits') {
                                    this.action = '{{ path('wajih_produit_index') }}';
                                } else {
                                    this.action = '{{ path('wajih_commande_index') }}';
                                }
                            });
                        </script>
                    </div>
                </div>
                
                {# Fullscreen Toggle #}
                <div class="nxl-h-item d-none d-sm-flex">
